<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="huka.com.repli.UserInfoActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userinfo_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_profile_picture"
        app:border_width="2dp"
        app:border_color="@color/primary_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textSize="20sp"
        android:text="KoolKid14"
        android:textColor="@color/primary"
        android:id="@+id/userinfo_usernameText"
        android:layout_below="@+id/userinfo_picture"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:textSize="13sp"
        android:text="abramo@gmail.com"
        android:textColor="@color/primary_dark"
        android:id="@+id/userinfo_emailText"
        android:layout_below="@+id/userinfo_usernameText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change profile picture"
        android:id="@+id/userinfo_changepictureButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="changePictureListener"/>


</RelativeLayout>
